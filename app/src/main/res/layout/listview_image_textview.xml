<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/image_listview"
            android:layout_weight="0.11"/>

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dishes_name"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/image_listview"
        android:layout_toRightOf="@id/image_listview"
        android:textSize="22dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dishes_description"
            android:layout_alignParentTop="true"
            android:layout_below="@+id/dishes_name"
            android:layout_toEndOf="@+id/image_listview"
            android:layout_toRightOf="@id/image_listview"
            android:layout_weight="1"
            android:paddingLeft="5dp"
            android:textSize="22dp"/>
    </RelativeLayout>

</LinearLayout>
